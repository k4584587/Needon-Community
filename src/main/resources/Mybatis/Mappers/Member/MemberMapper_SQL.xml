<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member">

	<select id="getUserLogin" resultType="Member">

		SELECT
			username,
			password,
			role,
			enabled
		FROM
			nb_member
		WHERE
			username = #{username}

	</select>

	<select id="geteUserRole" resultType="UserRole">

		SELECT
			username,
			role
		FROM
			nb_member
		WHERE
			username = #{username}

	</select>

	<select id="getFindUser" resultType="Member">

		  SELECT
		  	*
		  FROM
		  	nb_member
		  WHERE
		  	username = #{username}

	</select>
	
	<select id="getUserCount">
		SELECT
		  count(username)
		FROM
		  nb_member
	
	</select>
	
	<insert id="memberInsert" parameterType="Member">
		insert into nb_member(username,password,name,
		nick,phone,birth,sex,email,post,address1,address2,
		profile,photo,register_date,last_date) values(#{username},#{password},#{name},
		#{nick},#{phone},#{birth},#{sex},#{email},#{post},#{address1},#{address2},
		#{profile},#{photo},NOW(),NOW())
		
	
	</insert>
	
	<update id="psw_chage">
		UPDATE 
			nb_member 
		SET  
			password=#{password}
		WHERE username = #{username};
	
	</update>

</mapper>
